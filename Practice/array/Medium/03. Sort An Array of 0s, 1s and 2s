Better solution: 

#include <bits/stdc++.h> 
void sortArray(vector<int>& arr, int n)
{
    int zero,one,two=0;
    for(int i=0;i<n;i++){
        if(arr[i]==0) zero++;
        else if(arr[i]==1) one++;
        else two++;
    }
    for(int j=0;j<n;j++){
        if(j<zero){
            arr[j]=0;
        }

        else if(j>=zero && j<zero+one){
            arr[j]=1;
        }

        else arr[j]=2;
    }
}

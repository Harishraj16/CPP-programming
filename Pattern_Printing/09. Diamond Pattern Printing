#include <iostream>

using namespace std;

int main()
{
    int n=5;
     for(int i=0;i<n;i++){
        //space
        for(int j=0;j<n-(i+1);j++){
            cout<<" ";
        }
        //star
        for(int j=0;j<(2*i+1);j++){
            cout<<"*";
        }
        //space
        for(int j=0;j<n-(i+1);j++){
            cout<<" ";
        }
        cout<<endl;
    }
    for(int i=0;i<n;i++){
        //space
        for(int j=0;j<i;j++){
            cout<<" ";
        }
        //star
        for(int j=0;j<2*n-(2*i+1);j++){
            cout<<"*";
        }
        //space
        for(int j=0;j<i;j++){
            cout<<" ";
        }
        cout<<endl;
    }
}

//Alternative code:
#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cout<<"Enter the value of n:"
    cin>>n;
    for(int i=1;i<=2*n;i++){
        if(i<=2*n/2){
            for(int j=n;j>i;j--){
                cout<<" ";
            }
            for(int j=1;j<=2*i-1;j++){
                cout<<"*";
            }
            cout<<"\n";
        }
        else{
            for(int j=1;j<i-n;j++){
                cout<<" ";
            }
            for(int j=1;j<=2*n-((i-n)*2-1);j++){
                cout<<"*";
            }
            cout<<endl;
        }
    }
}
